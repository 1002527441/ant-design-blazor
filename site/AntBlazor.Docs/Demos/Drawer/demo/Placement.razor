<div>
    <AntBlazor.RadioGroup @bind-Value="placement">
        <AntBlazor.Radio Value="top">top</AntBlazor.Radio>
        <AntBlazor.Radio Value="right">right</AntBlazor.Radio>
        <AntBlazor.Radio Value="bottom">bottom</AntBlazor.Radio>
        <AntBlazor.Radio Value="left">left</AntBlazor.Radio>
    </AntBlazor.RadioGroup>

    <AntButton Type="primary" @onclick="_ => open()">Open</AntButton>
    <Drawer Closable="true" Visible="@visible" Placement="@placement" Title='("Drawer in different Placement")' OnClose="_ => close()">
        <p>Some contents...</p>
        <p>Some contents...</p>
        <p>Some contents...</p>
    </Drawer>
</div>  

@code{

    string placement = "right";

    bool visible = false;

    void open()
    {
        this.visible = true;
    }

    void close()
    {
        this.visible = false;
    }
}