<AntBlazor.RadioGroup @bind-Value=@size OnChange="e=> setSize(e)">
    <AntBlazor.Radio Value="small">Small</AntBlazor.Radio>
    <AntBlazor.Radio Value="middle">Middle</AntBlazor.Radio>
    <AntBlazor.Radio Value="large">Large</AntBlazor.Radio>
</AntBlazor.RadioGroup>
<br />
<br />
<Space Size=@size>
    <SpaceItem>
        <AntButton Type="primary">Primary</AntButton>
    </SpaceItem>
    <SpaceItem>
        <AntButton>Default</AntButton>
    </SpaceItem>
    <SpaceItem>
        <AntButton Type="dashed">Dashed</AntButton>
    </SpaceItem>
    <SpaceItem>
        <AntButton Type="link">Link</AntButton>
    </SpaceItem>
</Space>

@code {
    string size = "small";
    void setSize(string value)
    {
        size = value;
        StateHasChanged();
    }
}
