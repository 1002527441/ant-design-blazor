<AntBlazor.RadioGroup @bind-Value="@datePickerSize">
    <AntBlazor.Radio RadioButton Value="@DatePickerSize.Large">Large</AntBlazor.Radio>
    <AntBlazor.Radio RadioButton Value="@DatePickerSize.Default">Default</AntBlazor.Radio>
    <AntBlazor.Radio RadioButton Value="@DatePickerSize.Small">Small</AntBlazor.Radio>
</AntBlazor.RadioGroup>
<br />
<DatePicker Size="@datePickerSize" />
<br />
<DatePicker Picker="@DatePickerType.Month" Size="@datePickerSize" />
<br />
<RangePicker Size="@datePickerSize" />
<br />
<DatePicker Picker="@DatePickerType.Week" Size="@datePickerSize" />

@code {
    private string datePickerSize = DatePickerSize.Default;
}